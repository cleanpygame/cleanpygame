rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isGroupOwner(groupData) {
      return isAuthenticated() && request.auth.uid == groupData.ownerUid;
    }
    
    // Player Statistics Rules
    match /playerStats/{userId} {
      // Players can read and write their own stats
      allow read, write: if isOwner(userId);
      
      // Teachers can read stats of their group members
      // This is implemented by checking if the current user's UID is in the teacherIds array
      allow read: if isAuthenticated() && resource.data.teacherIds.hasAny([request.auth.uid]);
    }
    
    // Groups Rules
    match /groups/{groupId} {
      // Group owners have full access to the group
      allow read, write: if isGroupOwner(resource.data);
      
      // Public read access for groups (basic info)
      allow read: if true;
      
      // Any authenticated user can create a group (as a teacher)
      allow create: if isAuthenticated() && request.resource.data.ownerUid == request.auth.uid;
      
      // Members subcollection rules
      match /members/{memberId} {
        // Group owner has full access to all members
        allow read, write: if isGroupOwner(get(/databases/$(database)/documents/groups/$(groupId)).data);
        
        // Members have full access to their own member document
        allow read, write: if isOwner(memberId);
      }
    }
    
    // Join Codes Rules
    match /joinCodes/{code} {
      // Anyone can read join codes (required for join links)
      allow read: if true;
      
      // Only authenticated users can create join codes
      allow create: if isAuthenticated() && request.resource.data.ownerUid == request.auth.uid;
      
      // Only the group owner can update or delete join codes
      allow update, delete: if isAuthenticated() && resource.data.ownerUid == request.auth.uid;
    }
    
    // Custom Levels Rules
    match /customLevels/{levelId} {
      // Public read access for custom levels
      allow read: if true;
      
      // Only the author can create or update their levels
      allow create: if isAuthenticated() && request.resource.data.author_id == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.author_id == request.auth.uid;
      
      // No one can delete levels (soft delete should be implemented if needed)
      allow delete: if false;
    }
    
    // User Levels Rules
    match /userLevels/{userId} {
      // Users can only read and write their own userLevels document
      allow read, write: if isOwner(userId);
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}